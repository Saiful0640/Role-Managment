@model IEnumerable<RazorMVC.ViewModel.UserView>

@{
    ViewData["Title"] = "User List";
}

<div class="header">
    <img src="~/images/UserList.png" alt="User Icon">
    <h1>User List</h1>
    <p>Welcome to the user management portal</p>
</div>

<div class="container">
    <p class="text-end mt-1">
        <a asp-action="SaveUser"><button class="btn btn-primary">Add new User</button></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                <th>@Html.DisplayNameFor(model => model.UserTypeName)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserTypeName)</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Details", "GetUserById", new { id = item.Id }) |
                        <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
