@model RazorMVC.ViewModel.SettingViewModel.SettingViewModel
@{
    ViewData["Title"] = "SaveSettings";
}

<h2>Company Profile Settings</h2>

<form asp-action="SaveSettings" method="post">
    <!-- Hidden input to pass category to the controller -->
    <input type="hidden" name="category" value="CompanyProfile" />

    <div class="form-group">
        <label for="CompanyProfile_Name">Company Name</label>
        <input type="text" class="form-control" name="Settings[CompanyProfile_Name]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_Name") ? Model.Settings["CompanyProfile_Name"] : string.Empty)" />
    </div>

    <div class="form-group">
        <label for="CompanyProfile_Adress">Company Address</label>
        <input type="text" class="form-control" name="Setting[CompanyProfile_Adress]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_Adress") ? Model.Settings["CompanyProfile_Adress"] : string.Empty)" />
    </div>

    <div class="form-group">
        <label for="CompanyProfile_PhoneNumber">Company Contact</label>
        <input type="text" class="form-control" name="Settings[CompanyProfile_PhoneNumber]"
               value="@(Model.Settings.ContainsKey("CompanyProfile_PhoneNumber") ? Model.Settings["CompanyProfile_PhoneNumber"] : string.Empty)" />
    </div>

    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>